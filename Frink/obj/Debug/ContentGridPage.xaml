<Page
    x:Class="Frink.ContentGridPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Frink"
    xmlns:userControls="using:Frink.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid
        x:Name="root"
        Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Image x:ConnectionId='3'
                VerticalAlignment="Top"
                x:Name="imageHeader" 
                                                      
                                                                     
                Stretch="UniformToFill"/>

            <StackPanel x:Name="LoadingPanel" VerticalAlignment="Top">
                <ProgressRing x:Name="progressRing" IsEnabled="True" />
                <TextBlock x:Name="textBlockLoadingImage" x:Uid="textLoadingImage" HorizontalAlignment="Center" />
                <TextBlock x:Name="textBlockValidatingConnection" x:Uid="textValidatingInternetConnection" HorizontalAlignment="Center" />
                <TextBlock x:Name="textBlockErrorLoading" x:Uid="errorLoadingImage" HorizontalAlignment="Center" />
                <TextBlock x:Name="textBlockErrorNoConnection" x:Uid="errorNoInternetConnection" HorizontalAlignment="Center" />
                <TextBlock x:Name="textBlockErrorNoData" x:Uid="errorNoData" HorizontalAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <TextBlock
            Grid.Row="0"
            x:Name="textBlockDescription"
            Text="no data"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            FontSize="18" 
            TextWrapping="WrapWholeWords"
            Margin="10,0,10,10"
            Foreground="{StaticResource Color1}"/>

        <GridView x:ConnectionId='1'
            Grid.Row="1"
            x:Name="gridViewcontent"
            IsItemClickEnabled="True"
                                                 
                                           
            DataContext="{Binding}"
            Margin="0">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Image
                        Margin="0"
                        Stretch="UniformToFill"
                        Source="{Binding picture}"/>
                </DataTemplate>
            </GridView.ItemTemplate>

            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
                    <Setter Property="VerticalContentAlignment"
                    Value="Stretch" />
                </Style>
            </GridView.ItemContainerStyle>

            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid x:ConnectionId='2' 
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Orientation="Horizontal"
                        MaximumRowsOrColumns="3"
                        HorizontalChildrenAlignment="Stretch"
                        VerticalChildrenAlignment="Stretch"
                        Margin="0"
                                                />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</Page>


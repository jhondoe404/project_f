<Page
    x:Class="Frink.ContentTablePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Frink"
    xmlns:userControls="using:Frink.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="contentRoot" Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <userControls:ImageLoaderUserControl
            Grid.Row="0"
            x:Name="imageHeader"
            ImageSource="http://i585.photobucket.com/albums/ss296/pusangnegro/cutechicks.jpg"/>

        <ListView x:ConnectionId='1'
            Grid.Row="1"
            x:Name="ListViewContent"
            IsItemClickEnabled="True"
                                                 
            DataContext="{Binding}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image
                            Grid.RowSpan="2"
                            x:Name="imageLoaderImage" 
                            Width="54"
                            Height="54"
                            Stretch="UniformToFill"
                            Source="{Binding picture}"
                            Margin="10, 0, 10, 0"/>

                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Foreground="Black"
                            FontSize="18"
                            x:Name="textBlockTitle"
                            Text="{Binding title}"
                            Margin="5,5,10,5"/>

                        <TextBlock
                            HorizontalAlignment="Left"
                            Grid.Column="1"
                            Grid.Row="1"
                            FontSize="16"
                            Margin="5,0,10,5"
                            x:Name="textBlockDescription"
                            Text="{Binding createdAt}"
                            Foreground="{StaticResource Color1}"/>

                        <Line            
                            x:Name="Separator"
                            Grid.Row="2" 
                            Grid.ColumnSpan="2"
                            X2="1"
                            Stretch="Fill"
                            Fill="White"
                            StrokeThickness="1"
                            Stroke="{StaticResource Color3}"
                            Margin="10,2,10,2"/>

                    </Grid>

                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical" Width="{Binding PhoneWidth}"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
</Page>


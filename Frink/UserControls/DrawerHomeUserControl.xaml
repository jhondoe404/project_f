<UserControl
    x:Class="Frink.UserControls.DrawerHomeUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Frink.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid
        Background="White">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image
            Grid.Row="0"
            VerticalAlignment="Top"
            x:Name="imageHeader" 
            ImageOpened="imageHeader_ImageOpened" 
            ImageFailed="imageHeader_ImageFailed"                
            Stretch="UniformToFill"/>

        <StackPanel 
            x:Name="LoadingPanel" 
            VerticalAlignment="Top"
            Grid.Row="0">
            <ProgressRing x:Name="progressRing" IsEnabled="True" />
            <TextBlock x:Name="textBlockMessage" x:Uid="textLoadingImage" HorizontalAlignment="Center" />
        </StackPanel>
        
        <TextBlock
            Grid.Row="1"
            x:Name="textBlockContent" 
            FontSize="18"
            Foreground="Black"
            x:Uid="loremIpsum"/>
    </Grid>
</UserControl>
